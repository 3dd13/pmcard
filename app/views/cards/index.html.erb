<h1>Listing cards</h1>
  <table>
    <% @cards.each do |card| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(card.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= card.title %></dt>
            <dd><%= truncate(strip_tags(card.description), length: 80) %></dd>
            <dd><%= card.card_designer %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', card %><br/>
          <%= link_to 'Edit', edit_card_path(card) %><br/>
           <td><%= button_tag 'Delete', class: "btn btn-sm btn-danger btn-delete-card", href: card_path(card) %></td>
        </td>
      </tr>
    <% end %>
  </table>
<br />

<%= link_to 'New card', new_card_path %>